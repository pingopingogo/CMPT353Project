import pandas as pd
import numpy as np 

users_data = pd.read_csv('collected_user_data2.csv').set_index('id')
classification_data = pd.read_csv('twitter_human_bots_dataset.csv').set_index('id')

classification_data = classification_data[['account_type']]
users_data = users_data[['username', 'displayname', 'rawDescription',
                         'followersCount', 'friendsCount', 'statusesCount', 'favouritesCount',
                         'mediaCount', 'blue', 'location']]

together = classification_data.join(users_data).dropna()

bots = together[together['account_type'] == 'bot']
print(together)
together.to_csv('cleaned_user_data.csv')
